<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p class="user_error"><%= error %></p>
	<% end %>
<% end %>
<h1>Welcome!</h1>
<div id="register_block">
	<h3>Register</h3>
	<form action="/" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div>
			<label for="first_name">First Name:</label>
			<input id="first_name" type="text" name="user[first_name]">
		</div>
		<div>
			<label for="last_name">Last Name:</label>
			<input id="last_name" type="text" name="user[last_name]">
		</div>
		<div>
			<label for="email">Email:</label>
			<input id="email" type="text" name="user[email]">
		</div>
		<div>
			<label for="location">Location:</label>
			<input id="location" type="text" name="user[location]" id="location">
			<select name="user[state]">
				<% @states.each do |state| %>
					<option value="<%= state %>"><%= state %></option>
				<% end %>
			</select>
		</div>
		<div>
			<label for="password">Password:</label>
			<input id="password" type="password" name="user[password]">
		</div>
		<p>*Password should be at least 8 characters</p>
		<div>
			<label for="confirm">Confirm PW:</label>
			<input id="confirm" type="password" name="user[password_confirmation]">
		</div>
		<input type="submit" value="Register" id="regi_button">
	</form>
</div>
<div id="login_block">
	<h3>Login</h3>
	<form action="/login" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div>
			<label for="email">Email:</label>
			<input type="text" name="email">
		</div>
		<div>
			<label for="password">Password:</label>
			<input type="password" name="password">
		</div>
		<input type="submit" value="Login" id="login_button">
	</form>
</div>